<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity" >

    <Button
        android:id="@+id/journal"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/survey"
        android:text="@string/lblButtonJournal" />

    <Button
        android:id="@+id/btnGoals"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/journal"
        android:text="@string/lblButtonGoals" />

    <Button
        android:id="@+id/btnSocialNetwork"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnGoals"
        android:onClick="onSocialNetworkClickHandler"
        android:text="@string/lblButtonSocialNetwork" />

    <Button
        android:id="@+id/btnDiseaseInfo"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnSocialNetwork"
        android:onClick="onSurveyClickHandler"
        android:text="@string/lblButtonDiseaseInfo" />

    <Button
        android:id="@+id/btnSettings"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnDiseaseInfo"
        android:text="@string/lblButtonSettings" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSettings"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:minWidth="48dip"
        android:text="@string/lblButtonExit" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnExit"
        android:contentDescription="@string/lblSickKidsLogoContentDescription"
        android:src="@drawable/sickkids_logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnCalendar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:onClick="onCalendarClickHandler"
        android:text="@string/lblButtonCalendar" />

    <Button
        android:id="@+id/survey"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCalendar"
        android:layout_alignBottom="@+id/btnCalendar"
        android:layout_alignParentLeft="true"
        android:onClick="onSurveyClickHandler"
        android:text="@string/lblButtonSurvey" />

</RelativeLayout>